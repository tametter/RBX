<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/view_top_bar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/continue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen_main_button_continue"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_text_size"
            app:backgroundTint="@color/button_background_color"
            app:cornerRadius="0dp"
            app:rippleColor="@color/button_ripple_color"
            app:strokeColor="@color/button_stroke_color"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/levels_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen_main_button_levels"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_text_size"
            app:backgroundTint="@color/button_background_color"
            app:cornerRadius="0dp"
            app:rippleColor="@color/button_ripple_color"
            app:strokeColor="@color/button_stroke_color"
            app:strokeWidth="2dp"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/exhibition_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen_main_button_exhibition"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_text_size"
            app:backgroundTint="@color/button_background_color"
            app:cornerRadius="0dp"
            app:rippleColor="@color/button_ripple_color"
            app:strokeColor="@color/button_stroke_color"
            app:strokeWidth="2dp"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/quit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen_main_button_quit"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_text_size"
            app:backgroundTint="@color/button_background_color"
            app:cornerRadius="0dp"
            app:rippleColor="@color/button_ripple_color"
            app:strokeColor="@color/button_stroke_color"
            app:strokeWidth="2dp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</FrameLayout>