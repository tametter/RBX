<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_marginTop="36dp"
        android:background="@color/view_levels_card_background"
        android:elevation="4dp"
        android:orientation="vertical">

        <ch.talionis.rbx.views.StarRow
            android:id="@+id/star_row"
            android:layout_width="76dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#FF0000">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#550033"
                android:layout_weight="1"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#550033"
                android:layout_weight="1"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#550033"
                android:layout_weight="1"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#550033"
                android:layout_weight="1"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#550033"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="118dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#00FF00">

        </LinearLayout>

    </RelativeLayout>

    <ch.talionis.rbx.views.CircleAnimalView
        android:id="@+id/pentagon_number_view"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:elevation="4dp" />

</RelativeLayout>
